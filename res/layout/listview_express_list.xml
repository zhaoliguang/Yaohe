<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DDDAC4"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/select_common_list" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="姓名:"
            android:textColor="#8E8A6F"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lvpostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:layout_toRightOf="@+id/textView5"
            android:textColor="#0095ea"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码:"
            android:layout_toRightOf="@+id/lvpostName"
            android:layout_marginLeft="10dp"
            android:textColor="#8E8A6F"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/lvPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_toRightOf="@+id/textView6"
            android:text="12345678924"
            android:layout_marginLeft="0dp"
            android:textColor="#0095ea"
            android:textSize="19sp" />
        
         
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_details"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            />
    </RelativeLayout>

</LinearLayout>